---
import clsx from "clsx/lite";

type Props = {
  href: string;
  className?: string;
  variant?: "primary" | "secondary";
};

const { href, variant = "primary", className } = Astro.props;
---

<a
  href={href}
  class={clsx(
    "font-new-rocker w-fit text-base sm:text-2xl px-5 py-2 rounded-full transition-all duration-300 ease-in-out whitespace-nowrap",
    variant === "primary" && "",
    variant === "secondary" && "",
    className,
  )}
>
  <slot />
</a>
